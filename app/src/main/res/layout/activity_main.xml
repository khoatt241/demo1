<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_weight="1"
        android:background="#f20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4">
        <TextView
            android:gravity="center"
            android:background="#F8051D"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="A"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:gravity="center"
            android:background="#178015"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="B"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:gravity="center"
            android:background="#549C47"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:gravity="center"
            android:background="#0076CE"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="D"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:background="#00FFA6"
            android:textSize="30sp"
            android:gravity="center"
            android:text="A"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#A600FF"
            android:textSize="30sp"
            android:gravity="center"
            android:text="B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#FF00B7"
            android:gravity="center"
            android:textSize="30sp"
            android:text="C"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#AA2712"
            android:gravity="center"
            android:textSize="30sp"
            android:text="D"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>